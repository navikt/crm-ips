                <elementReference>$Record.AMS_Vocational_education_and_training__r.AMS_Work_Trail__r.Id</elementReference>
            </value>
        </inputAssignments>
        <inputReference>$Record</inputReference>
    </recordUpdates>
    <start>
        <locationX>0</locationX>
        <locationY>0</locationY>
        <connector>
            <targetReference>Update_with_worktrail</targetReference>
        </connector>
        <object>AMS_Apprentice_Job__c</object>
        <recordTriggerType>Create</recordTriggerType>
        <triggerType>RecordBeforeSave</triggerType>
