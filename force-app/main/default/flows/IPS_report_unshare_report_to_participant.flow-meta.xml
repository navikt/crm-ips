    <decisions>
        <description>Check if duedate is passed and set status back to open.</description>
        <name>IPS_check_if_date_is_passed</name>
        <label>check if date is passed</label>
        <locationX>182</locationX>
        <locationY>252</locationY>
        <defaultConnectorLabel>Default Outcome</defaultConnectorLabel>
        <rules>
            <name>isPassed</name>
            <conditionLogic>and</conditionLogic>
            <conditions>
                <leftValueReference>$Record.IPS_dueDateBack__c</leftValueReference>
                <operator>LessThan</operator>
                <rightValue>
                    <elementReference>IPS_today</elementReference>
                </rightValue>
            </conditions>
            <connector>
                <targetReference>IPS_get_custom_notification_id</targetReference>
            </connector>
            <label>isPassed</label>
        </rules>
    </decisions>
    <description>Scheduled flow that check if duedate is passed. Set status back to Open for report. This prevent reports to be shared with participant in experience cloud when its not supposed to be shared.</description>
    <environments>Default</environments>
    <formulas>
        <name>IPS_today</name>
